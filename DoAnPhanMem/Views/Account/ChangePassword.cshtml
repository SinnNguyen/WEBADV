@model DoAnPhanMem.Models.ChangePasswordViewModels
@using DoAnPhanMem.Common.Helpers
@{
    ViewBag.Title = "Thay đổi mật khẩu";
    Layout = "~/Views/Shared/Main_Layout.cshtml";

}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <!-- ...:::: Start Breadcrumb Section:::... -->
    <div class="breadcrumb-section breadcrumb-bg-color--black">
        <div class="breadcrumb-wrapper">
            <div class="container">
                <div class="row">
                    <div class="col-12">
                        <div class="breadcrumb-nav breadcrumb-nav-color--black breadcrumb-nav-hover-color--golden">
                            <nav aria-label="breadcrumb">
                                <ul>
                                    <li><a href="@Url.Action("Index","Home")">Trang chủ</a></li>
                                    <li>
                                        <a href="#">Tài khoản</a>
                                    </li>
                                    <li class="active" aria-current="page">
                                        Thông tin tài khoản
                                    </li>
                                </ul>
                            </nav>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- ...:::: End Breadcrumb Section:::... -->
    <!-- ...:::: Start Account Dashboard Section:::... -->
    <div class="account-dashboard">
        <div class="container">
            <div class="row">
                @Html.Partial("Dashboard")
                <div class="col-sm-12 col-md-9 col-lg-9">
                    <!-- Tab panes -->
                    <div class="tab-content dashboard_content" data-aos="fade-up" data-aos-delay="0">
                        <div id="account-details">
                            <h3>Đổi mật khẩu</h3>
                            <div class="login">
                                <div class="login_form_container">
                                    <div class="account_login_form">
                                        <form id="Updatename" method="post">
                                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                            <label>Mật khẩu cũ</label>
                                            <div class="default-form-box mb-20">
                                                @Html.EditorFor(model => model.OldPassword, new { htmlAttributes = new { type = "password" } })
                                                @Html.ValidationMessageFor(model => model.OldPassword, "", new { @class = "text-danger" })
                                            </div>
                                            <label>Mật khẩu mới</label>
                                            <div class="default-form-box mb-20">
                                                @Html.EditorFor(model => model.NewPassword, new { htmlAttributes = new { type = "password" } })
                                                @Html.ValidationMessageFor(model => model.NewPassword, "", new { @class = "text-danger" })
                                            </div>
                                            <label>Mật khẩu xác nhận</label>
                                            <div class="default-form-box mb-20">
                                                @Html.EditorFor(model => model.PasswordConfirm, new { htmlAttributes = new { type = "password" } })
                                                @Html.ValidationMessageFor(model => model.PasswordConfirm, "", new { @class = "text-danger" })
                                            </div>
                                            <div class="save_button mt-3">
                                                <button class="btn btn-md btn-black-default-hover" type="submit">
                                                    Lưu
                                                </button>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- ...:::: End Account Dashboard Section:::... -->
}
@section scripts{
    <script src="~/Scripts/UserJS/jquery.validate.min.js"></script>
    <script src="~/Scripts/UserJS/jquery.validate.unobtrusive.js"></script>
}
